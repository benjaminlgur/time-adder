<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/adder"
            android:layout_width="260dp"
            android:layout_height="51dp" app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"/>
    <Button
            android:text="@string/add"
            android:layout_width="413dp"
            android:layout_height="92dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/addbut" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:foregroundGravity="center"
            android:background="#D800ACC1"/>
    <TextView
            android:text="@string/output"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/output"
            app:layout_constraintHorizontal_bias="0.497"
            android:textSize="40sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/addbut"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="56dp"
            android:inputType="time"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/time1"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Title" android:hint="@string/time1"/>
    <EditText
            android:layout_width="231dp"
            android:layout_height="60dp"
            android:inputType="time"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/time2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/time1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/output" app:layout_constraintVertical_bias="0.036"
            android:hint="@string/time2"/>
</android.support.constraint.ConstraintLayout>